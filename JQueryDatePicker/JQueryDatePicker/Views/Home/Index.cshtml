<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css" />
</head>
@{
    ViewBag.Title = "Index";
}
@model JQueryDatePicker.Models.Customer 
@using (Html.BeginForm("index", "home"))
{    
    <div style="width: 100%">
        <div style="width: 20%">
            <a href="http://dotnetmentors.com">
                <img src="http://dotnetmentors.com/images/dotnetmentors.png" alt="dotnetmentors.com" /></a>
        </div>
        <div style="width: 60%">
            <h2>
                DatePicker- Change Month and Year</h2>
        </div>
    </div>
    
    <div>
        @Html.LabelFor(c => c.JoinDate) &nbsp; &nbsp; @Html.TextBoxFor(c => c.JoinDate, new { id = "datepicker" })
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-default">
            Submit</button>
    </div>   
    
}
<script src="//code.jquery.com/jquery-1.10.2.js" type="text/javascript"></script>
<script src="//code.jquery.com/ui/1.11.2/jquery-ui.js" type="text/javascript"></script>
<script type="text/javascript">
    $("#datepicker").datepicker({
        changeMonth: true,
        changeYear: true
    });
</script>
